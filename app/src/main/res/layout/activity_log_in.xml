<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="-151dp"
        android:layout_marginTop="155px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="78px"
        android:layout_marginStart="24dp"
        android:text="Welcome Back"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:fontFamily="sans-serif-medium"
        android:text="Fill in your email and password to continue"
        android:textColor="@color/dark_grey"
        android:textSize="14dp"
        android:layout_marginStart="24dp"/>
    <TextView
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65px"
        android:text="Email adress"
        android:textColor="@color/dark_grey"
        android:fontFamily="sans-serif-medium"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="323dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/editteext_field"
        android:hint="***********@mail.com"
        android:paddingStart="6dp"
        android:textColorHint="@color/light_grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56px"
        android:text="Phone number"
        android:textColor="@color/dark_grey"
        android:fontFamily="sans-serif-medium"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="323dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/editteext_field"
        android:hint="**********"
        android:paddingStart="6dp"
        android:textColorHint="@color/light_grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp">
            <CheckBox
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/checkbox_simple_style"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember password"
                android:fontFamily="sans-serif-medium"
                android:textSize="12dp"
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:id="@+id/button_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/primary_color_blue"
                android:fontFamily="sans-serif-medium"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="70dp"/>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logIn"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/text_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginStart="2dp"
                android:textColor="@color/primary_color_blue"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or log in using"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:fontFamily="sans-serif"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:src="@drawable/logo_google"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>