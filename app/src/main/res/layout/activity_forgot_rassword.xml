<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotRasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="-151dp"
        android:layout_marginTop="155px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="78px"
        android:layout_marginStart="24dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:fontFamily="sans-serif-medium"
        android:text="Enter your email address"
        android:textColor="@color/dark_grey"
        android:textSize="14dp"
        android:layout_marginStart="24dp"/>
    <TextView
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="75px"
        android:text="Email adress"
        android:textColor="@color/dark_grey"
        android:fontFamily="sans-serif-medium"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="323dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/editteext_field"
        android:hint="***********@mail.com"
        android:paddingStart="6dp"
        android:textColorHint="@color/light_grey"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logIn"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember password? Back to "
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/text_forgot_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="@color/primary_color_blue"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>