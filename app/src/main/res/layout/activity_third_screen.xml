<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="-151dp">

    <ImageView
        android:layout_width="346dp"
        android:layout_height="346dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_third_screen" />

    <TextView
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Real-time Tracking"
        android:textColor="@color/primary_color_blue"
        android:textSize="24dp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Track your packages/items from the comfort of your home till final destination"
            android:textColor="@color/text_color_light"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_sugnUp"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200px"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/text_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:layout_marginStart="2dp"
                android:textColor="@color/primary_color_blue"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>